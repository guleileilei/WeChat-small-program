
.tools{
    height: 70px;
    margin: 10px;
    width: 310px;
    padding:10px 20px 15px; 
    flex-direction: column;
    border: 1px solid #ddd;
}
.tools .pic{
    width:50px;
    height:50px;
    float:left;
    margin: 10px;
}
.tools .pic image{
    width:100%;
    height: 100%;
}
.tools .h2{
    font-weight: bold;
    font-size:36rpx;
    line-height: 46rpx;
    display: block;
}
.tools .text{
    line-height: 30rpx;
    font-size: 26rpx;
}
.tools .content{
    float: right;
    width:220px;
}




















