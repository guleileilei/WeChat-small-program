/*            推荐课程区                     */
#header{
    width:100%;
    height:60rpx;
    padding: 70rpx 27rpx 17rpx 24rpx;
}
#header image{
    width: 50rpx;
    height: 50rpx;
    vertical-align: middle;
}
#header text{
    line-height: 60rpx;
    font-size: 32rpx;
    font-weight: bold;
    margin-left: 10rpx;
    vertical-align: middle;
}

#subject{
    padding: 0 27rpx 0 24rpx;
    position: relative;
    color:#fff;
    margin-bottom: 2rpx;
}
#subject image{
    width:700rpx;
    height:275rpx;
}

#subject .center_messages{
    position: absolute;
    left:140rpx;
    top:105rpx;
    font-size: 36rpx;
}
#subject .type{
    position: absolute;
    top:0;
    right: 27rpx;
    border-bottom-left-radius: 9rpx;
    border-bottom-right-radius: 9rpx;
    font-size: 24rpx;
    display: block;
    width: 140rpx;
    height: 44rpx;
    background-color: #dce2e5;
    text-align: center;
    line-height: 44rpx;
}
#subject .photo image{
    border-radius: 50%;
    width:50rpx;
    height:50rpx;
    position:absolute;
    top:210rpx;
    left: 40rpx;
}
#subject .privte_info{
    position: absolute;
    top:221rpx;
    left: 107rpx;
    font-size: 24rpx;
}

#subject .details{
    margin:13rpx 0 20rpx;
}
#subject .details text{
    line-height: 42rpx;
    font-size: 28rpx;
    color:#000;
    display: -webkit-box !important;
    -webkit-box-orient: vertical;
    text-overflow: ellipsis;
    overflow: hidden;
    word-break: all;
    -webkit-line-clamp:2;
    margin-bottom: 10rpx;
}
#subject .details a{
    display: inline-flex;
    flex-direction: row;  
    font-size: 20rpx;
    margin-right: 13rpx;
    color:#b2b2b2;
}
#subject .details .wenshu{
    color:#4d9df7;
    font-size: 24rpx;
    font-weight: bold;
    margin-right: 34rpx;
}
#subject .details .join{
    width:130rpx;
    height: 54rpx;
    border:1px solid #4d9df7;
    color:#4d9df7;
    border-radius: 30rpx;
    font-size: 24rpx;
    text-align: center;
    line-height: 54rpx;
    margin-left: 150rpx;
    display: inline-block
}





