}

.slide-image {
  width: 120%;
  height: 120px;
}

.baikuang {
  border: 5px #f5f8fa solid;
  text-align: center;
}

.Article {
  margin: 15px 0 10px 10px;
  display: block;
}

.comment {
  float: left;
}

.list1 li {
  width: 70%;
  float: left;
}

.list1 span image {
  width: 80px;
  height: 80px;
  float: right;
}

.comment text {
  font-size: 12px;
  color: #ccc;
  padding: 0 5px;
}

.list1:last-child {
