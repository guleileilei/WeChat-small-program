swiper-item {
  overflow: scroll;
}

.log-list {
  display: flex;
  flex-direction: column;
  padding: 40rpx;
}

.log-item {
  margin: 10rpx;
}

#myVideo {
  width: 100%;
}

.swiper-tab {
  width: 100%;
  text-align: center;
  line-height: 80rpx;
}

.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
  width: 25%;
  color: #000;
}

.on {
  color: #79b5f8;
  border-bottom: 5rpx solid #79b5f8;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.swiper-box view {
  padding: 20px;
}

.title {
  color: #000;
}

.Course-label {
  font-size: 28rpx;
  color: #000;
}

.Course-label span {
  width: 15%;
  border: 2rpx solid #000;
  display: iline-block;
  border-radius: 8px;
  text-align: center;
  font-size: 28rpx;
  padding: 5px;
}

.Suitable-crowd {
  font-size: 28rpx;
  color: #000;
}

.Suitable-crowd span {
  width: 15%;
  font-weight:bold; 
  display: inline-block;
  border-radius: 8px;
  text-align: center;
  font-size: 28rpx;
  margin-left: 10px;
}

.introduce {
  color: #000;
}

.userinfo {
  border-top: 2rpx solid #ffcd05;
  border-bottom: 10rpx solid #ffcd05;
  height: 154px;
  text-align: center;
}

.userinfo-avatar {
  width: 60px;
  height: 60px;
  float: left;
}

.userinfo a {
  display: inline-block;
  color: #99c7fa;
  border: 1px #99c7fa solid;
  border-radius: 5px;
  padding-right: 15px;
}

.userinfo span {
  width: 38px;
  height: 50px;
  padding-left: 15px;
}

.encourage {
  text-align: center;
  color: #000;
}

.reward text {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  background: #ffc902;
  text-align: center;
  display: block;
  line-height: 60px;
  margin: 0 auto;
  font-size: 36px;
  color: #fff;
}
.yuan {
  
  text-align: center;
 
}

.yuan span {
  display: inline-block;
  height: 30px;
  width: 30px;
  border-radius: 50%;
  background-color: #e5e5e5;
  margin-right: 3px;
}


.list {
  border-top: 5px #f5f8fa solid;
  color: #000;
}

